    %link{ :rel => "sitemap", :type => "application/xml", :title => "Sitemap", :href => "/sitemap.xml" }

    %link{ :href => "/favicon.ico", :rel => "shortcut icon" }
    %link{ :href => "{{ site.url }}{{ page.url }}", :rel => "canonical" }

    {% if page.title %}
    %meta{ :property => "og:type", :content => "article" }
    %meta{ :name => "twitter:card", :content => "summary" }
    {% else %}
    %meta{ :property => "og:type", :content => "website" } 
    {% endif %}
     
    {% if page.url %}
    %meta{ :property => "og:url", :content => "{{ site.url }}{{ page.url }}" }
    %meta{ :name => "twitter:url", :content => "{{ site.url }}{{ page.url }}" }    
    {% endif %}
     
    {% if page.date %}
    %meta{ :property => "article:published_time", :content => "{{page.date | date_to_xmlschema}}" }
    %meta{ :property => "article:author", :content => "{{ site.url }}/about/" }
    {% endif %}

    %link{ :href => "http://fonts.googleapis.com/css?family=Open+Sans:400italic,400,600", :type => "text/css", :rel => "stylesheet" }
    %link{ :href => "/assets/css/styles.min.css", :type => "text/css", :rel => "stylesheet" }

    %script{ :src => '/assets/js/vendor/html5shiv.js' }

