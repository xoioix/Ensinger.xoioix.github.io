        %header{ :class => "site-header", :role => "banner" }
          %a{ :href => "/", :class => "site-logo" }
            %img{ :src => "data:image/gif;base64,R0lGODlhAQABAIAAAP///wAAACH5BAEAAAAALAAAAAABAAEAAAICRAEAOw==", :class => "logo", :alt => "" }
          %nav{ :class => "main-navigation", :role => "navigation" }
            %h1.visuallyhidden
            .visuallyhidden
              %a{ :title => "Skip to content", :href => "#content" } Skip to content
            %ul
              %li
                %a{ :href => "/", :class => "nav-home" } Home
              %li
                %a{ :href => "/about/", :class => "nav-about" } About
        #content.primary{ :role => "main" }
          {{ content }}
        %aside{ :class => " secondary vcard author", :role => "complementary" }
          %img{ :src => "/assets/img/david-ensinger.jpg", :class => "secondary-photo photo", :alt => "A photo of David Ensinger" }
          %p Hi, I’m <strong class="fn">David Ensinger</strong> and I’m a <strong>Front End Developer</strong>. Learn more <a href="/about/" class="url">about me</a>.
          %p Have a look around and please don’t hesitate to <a href="mailto:hello@davidensinger.com" class="email">contact me</a> with any comments, questions, or just to say hello!
          %a{ :title => "Follow @DavidEnsinger on Twitter", :href => "http://twitter.com/DavidEnsinger", :class => "icon-left icon-twitter" } Follow me on Twitter
      %footer{ :class => "site-footer", :role => "contentinfo" }
        .footer-icons
          %a{ :title => "Follow me on Twitter", :href => "http://twitter.com/DavidEnsinger", :class => "footer-icon-link" }
            %span{ :class => "footer-icon icon-twitter", :"aria-hidden" => "true" }
            %span.visuallyhidden Twitter
          %a{ :title => "Follow me on GitHub", :href => "http://github.com/davidensinger", :class => "footer-icon-link" }
            %span{ :class => "footer-icon icon-github", :"aria-hidden" => "true" }
            %span.visuallyhidden GitHub
          %a{ :title => "Follow me on Tumblr", :href => "http://www.republicofthespirit.com/", :class => "footer-icon-link" }
            %span{ :class => "footer-icon icon-tumblr", :"aria-hidden" => "true" }
            %span.visuallyhidden Tumblr
        %p
          &copy; {{ site.time | date: '%Y' }} David Ensinger. All rights reserved.
          %a{ :title => "Subscribe to my RSS feed", :href => "/atom.xml", :class => "link-rss" }
            %span{ :class => "icon-rss", :"aria-hidden" => "true" }
            %span.visuallyhidden RSS

